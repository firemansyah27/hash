<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="popup_message_wizard_views" model="ir.ui.view">
        <field name="name">popup.message.wizard.views</field>
        <field name="model">popup.message</field>
        <field name="arch" type="xml">
            <form string="Check Result">
                <div class="oe_title">
                    <span class="o_form_label" string="Work Order" />
                    <h1>
                        <field name="message" readonly="1"/>
                    </h1>
                </div>
                <footer>
                    <button string="OK" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>